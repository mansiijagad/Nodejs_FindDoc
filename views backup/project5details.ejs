<br><br><br>
<h3 class="chead">Categories</h3>
<br>
<% for(var j=0;j<categories.length;j++){ %>
  <span><a href="/doctors/<%= categories[j].category  %>"><span class='li1'><%= categories[j].category %></span></a></span>
<% } %>
<h1 class="head">FindaDoc</h1>
<h3 class="head">Search for local doctors</h3>

<div class="container">
<h2 class="hheading"><%= doctor.pname %></h2>
<p class="li1">Physician Information</p>
<p class="li1">Full Name: <%= doctor.name %></p>
<p class="li1">Contact Number: <%= doctor.phnnumber %></p>
<p class="li1">Accepting New Patients:<%= doctor.accepting %></p>
<p class="li1">Speciality:<%= doctor.category %></p>
<p class="li1">Graduation Date:<%= doctor.year %></p>
<p class="li1">Practice Information</p>
<p class="li1">Votes:<%= doctor.votes %></p>
<p class="li1">Address:<%= doctor.address %></p>

<% if(doctor.exp.length!=0) { 
for(var i=0;i<doctor.exp.length;i++) { %>
<div class="card">
  <h5 class="card-header">Visited for - <%= doctor.exp[i].issue %></h5>
  <div class="card-body">
    <h5 class="card-title"><%= doctor.exp[i].name %></h5>
    <% if(doctor.exp[i].recommend=="yes") { %>
    <p class="card-text">I recommend the doctor</p>
    <% } else { %>
    <p class="card-text">I do not recommend the doctor</p>
    <% } %>
    <p class="card-text"><%= doctor.exp[i].experience %></p>
  </div>
</div>
<% }} %>

</div>
</body>
