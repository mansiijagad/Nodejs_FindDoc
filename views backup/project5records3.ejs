<h1 class="head">FindaDoc</h1>
<h3 class="head">Search for local doctors</h3>
<br>

<a href="/upload"><button type="button" class="btn btn-warning button">Upload records</button></a>
<br><br><br>

<% if(recorddata.length!=0) { 
   for(var i=0;i<recorddata.length;i++) { %>
<div class="card text-center">
  <div class="card-header">
   <%= recorddata[i].name %> 
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= recorddata[i].title %></h5>
    <p class="card-text">Type of Record - <%= recorddata[i].type %></p>
    <p class="card-text">Date of Record - <%= recorddata[i].date %></p>
    <a href="/delete/<%= recorddata[i]._id %>"><button class="btn btn-info">Delete</button></a>
    <a href="/share/<%= recorddata[i]._id %>"><button class="btn btn-info">Share</button></a>
  </div>
</div>
<br><br>
<% }} else { %>
<h4 class='errormsg' >No records</h4>
<% } %>

