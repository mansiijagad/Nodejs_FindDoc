<h3 class='nhead'>Add patient details</h3>
<form method="post" action='/testfinal'>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="name"> Patient's Name </label>
      <input type="text" class="form-control" name='pname' id="name" placeholder="Patient's Name">
    </div>
    <div class="form-group col-md-6">
      <label for="mobileno">Patient's mobile</label>
      <input type="text" class="form-control" name='pnumber' id="mobilno" placeholder="Mobile Number">
    </div>
  </div>
  <div class="form-group">
    <label for="email">Email</label>
    <input type="email" class="form-control" name='pemail' id="email" placeholder="Email Id ">
  </div>
  <div class="form-group">
    <label for="address">Patient's Address</label>
    <input type="text" class="form-control" id="address" name='paddress' placeholder="Apartment, Locality , Sector">
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="age">Age</label>
      <input type="text" class="form-control" name='page' id="age">
    </div>
    <div class="form-group col-md-6">
      <label for="date">Enter required date for test</label>
        <input type="text" class="form-control" name='pdate' id="date">
      </div>
  </div>
    <div class="form-row">
      <div class="form-group col-md-6">
      <label for="time">Select a time slot</label>
      <select id="time" name='ptime' class="form-control">
        <option value="06:30-0:700AM">06:30-0:700AM</option>
        <option value="07:00-07:30AM">07:00-07:30AM</option>
        <option value="09:00-09:30AM">09:00-09:30AM</option>
      </select>
    </div>
    <div class="form-group col-md-6">
     <label for="gender">Gender</label>
  <input type="radio" name="pgender" valu="Male" checked>Male
  <input type="radio" name="pgender" valu="Female" checked>Female
  <input type="radio" name="pgender" valu="Other" checked>Other
    </div></div>

  <button type="submit" class="btn btn-info button">BOOK</button>
  <br><br><br>
</form>

